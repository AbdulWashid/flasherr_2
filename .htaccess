<IfModule mod_rewrite.c>
    RewriteEngine On

    # -------------------------------
    # 1Ô∏è‚É£ Redirect to HTTPS
    # -------------------------------
    RewriteCond %{HTTPS} off
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # -------------------------------
    # 2Ô∏è‚É£ Authorization header fix (for APIs / Sanctum / JWT)
    # -------------------------------
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # -------------------------------
    # 3Ô∏è‚É£ Redirect Trailing Slashes
    # -------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # -------------------------------
    # 4Ô∏è‚É£ Handle static assets from /public
    # -------------------------------
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
    RewriteRule ^(.*)$ public/$1 [L]

    # -------------------------------
    # 5Ô∏è‚É£ Send all other requests to index.php
    # -------------------------------
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# -------------------------------
# üß± Block .env and sensitive files
# -------------------------------
<Files .env>
    Order allow,deny
    Deny from all
</Files>

# -------------------------------
# üßπ Disable caching for HTML, CSS, JS, WASM
# -------------------------------
<IfModule mod_headers.c>
<FilesMatch "\.(html|js|css|wasm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires 0
</FilesMatch>
</IfModule>
